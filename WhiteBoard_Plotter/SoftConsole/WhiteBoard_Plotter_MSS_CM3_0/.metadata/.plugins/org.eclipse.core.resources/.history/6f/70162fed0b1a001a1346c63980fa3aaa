#include "stepper.h"
#include "interface.h"
#include "xbee.h"

//Current Dimensions: 57, 85
//center: 42.5, 28.5
int main(){
	stepper_config(SIXTEENTH, SIXTEENTH);
	interfaceConfig(57, 85);

	uint8_t servoExtend[1] = {'e'};
	uint8_t servoRetract[1] = {'r'};

	sendMessage(&servoRetract, 1, 0x373A);
	makeLine(2.0, -0.7);
	sendMessage(&servoExtend, 1, 0x373A);
	makeLine(0.0, -3.0);
	makeLine(-1.5, 1.5);
	makeLine(2.0, 0.0);
	//Get ready for next character
	sendMessage(&servoRetract, 1, 0x373A);
	makeLine(0.5, 2.2);

	//makeLine(3, 0);
	//makeLine(0, -3);
	//makeLine(-3, 0);
	//makeLine(0, -3);
	//makeLine(3, 0);

	//One A
	//makeLine(47.91, 18.305);
	//makeLine(53.91, 27.305);
	//makeLine(50.91, 22.805);
	//makeLine(44.91, 22.805);

	//One Box
	//makeLine(41.91, 20);
	//makeLine(55, 20);
	//makeLine(55, 27.305);
	//makeLine(41.91, 27.305);

	//One Box
	//makeLine(41.91, 40);
	//makeLine(60, 40);
	//makeLine(60, 27.305);
	//makeLine(41.91, 27.305);
	return 0;
}
