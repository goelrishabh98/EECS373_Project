#include "touchscreen.h"

int main()
{
	touchscreen_begin();

	drawFillScreen(ILI9341_BLUE);
	drawRectanglePixel(5, 5, ILI9341_TFTWIDTH-10, ILI9341_TFTHEIGHT-10, ILI9341_BLACK);


	while( 1 )
	{
		int x = 240 - getX();
		int y = 320 - getY();
		int z = getZ(x);

		if(z >= 0){
			drawPixel(x, y, ILI9341_YELLOW);
		}
	}
	return 0;
}
